{{#if personEmail}}
    <div class="person-data">
        <div class="person-data__title person-holder">
            <span class="person-name">{{personEmail}}</span>
            {{#if hasNoAccess}}
                <span class="user-disabled">(Inactive user)</span>
            {{/if}}
        </div>
        <content/>
    </div>
{{/if}}
