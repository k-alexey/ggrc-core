{{#if showButton}}
  {{#if canShowMore}}
    <button class="btn btn-white btn-small"
      on:el:click="showMore">
      Show {{remain}} older comment{{^eq remain 1}}s{{/eq}}
    </button>
  {{/if}}
  {{#if canHide}}
    <button class="btn btn-white btn-small"
      on:el:click="showLess">
      Show less comments
    </button>
  {{/if}}
{{/if}}
<spinner-component toggle:from="isLoading"></spinner-component>
